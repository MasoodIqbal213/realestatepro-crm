# UAT Environment Configuration
# Copy this file to .env.uat and update values as needed

# Application
NODE_ENV=uat
NEXT_PUBLIC_APP_URL=https://uat.realestatepro.com
NEXT_PUBLIC_APP_NAME=RealEstatePro CRM
NEXT_PUBLIC_APP_VERSION=0.1.0

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/realestatepro_uat
MONGODB_DB_NAME=realestatepro_uat

# Authentication
NEXTAUTH_URL=https://uat.realestatepro.com
NEXTAUTH_SECRET=your-uat-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=uat@realestatepro.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@realestatepro.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Redis (for caching and sessions)
REDIS_URL=redis://redis-uat:6379

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
CORS_ORIGIN=https://uat.realestatepro.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_PAYMENTS=true

# Localization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,ar
TIMEZONE=Asia/Dubai 